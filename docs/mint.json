{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "openapi": [ "/openapi.yml" ],
  "theme": "quill",
  "layout": "sidenav",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#4b61d5",
    "light": "#4b61d5",
    "dark": "#4b61d5",
    "anchors": {
      "from": "#4b61d5",
      "to": "#4b61d5"
    },
    "background": {
      "light": "#fff",
      "dark": "#191919"
    }
  },
  "rounded": "default",
  "api": {
    "playground": {
      "mode": "simple"
    },
    "maintainOrder": true
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true,
    "thumbsRating": true
  },
  "topbarLinks": [
    {
      "name": "Discord",
      "url": "https://discord.gg/dVTC3BmgEq"
    }
  ],
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/tegonhq/sigma"
  },
  "redirects": [
    {
      "source": "/fundamentals/todo",
      "destination": "/fundamentals/todo"
    },
    {
      "source": "/fundamentals/issues",
      "destination": "/guides/issues"
    },
    {
      "source": "/fundamentals/triage",
      "destination": "/guides/triage"
    },
    {
      "source": "/fundamentals/cycles",
      "destination": "/guides/cycles"
    }
  ],
  "anchors": [
    {
      "name": "Integrations",
      "icon": "brackets-curly",
      "url": "integrations"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction",
        "changelog"
      ]
    },
    {
      "group": "Fundamentals",
      "pages": [
        "fundamentals/todo",
        "fundamentals/chat",
        "fundamentals/shortcuts"
      ]
    },
    {
      "group": "Personalisation",
      "pages": [
        "personalisation/automations",
        "personalisation/memory",
        "personalisation/sync"
      ]
    },
    {
      "group": "Integrations",
      "pages": [
        "integrations/overview"
      ]
    }

  ],
  "footerSocials": {
    "twitter": "https://x.com/mysigmahq",
    "linkedin": "https://www.linkedin.com/company/sigmahq"
  }
}
