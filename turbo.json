{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "VERSION",
    "NODE_ENV",
    "PORT",
    "LOG_LEVEL",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB",
    "DB_HOST",
    "DB_PORT",
    "DB_SCHEMA",
    "DATABASE_URL",
    "REPLICATION_DATABASE_URL",
    "FRONTEND_HOST",
    "BACKEND_HOST",
    "BACKEND_URL",
    "PUBLIC_ATTACHMENT_URL",

    "ANTHROPIC_API_KEY",
    "GOOGLE_GENERATIVE_AI_API_KEY",
    "COHERE_API_KEY",
    "OPENAI_API_KEY",

    "STORAGE_PROVIDER",
    "BUCKET_NAME",
    "GCP_SERVICE_ACCOUNT_FILE",

    "TRIGGER_ACCESS_TOKEN",
    "TRIGGER_SECRET_KEY",
    "TRIGGER_API_URL",

    "CORE_CLIENT_ID",
    "CORE_CLIENT_SECRET",
    "CORE_BASE_URL",

    "AWS_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "EXA_API_KEY",

    "BETTER_AUTH_SECRET"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [ "^build" ],
      "outputs": [ "dist/**", ".next/**" ]
    },
    "compile": {
      "env": [
        "APPLE_APP_SPECIFIC_PASSWORD",
        "APPLE_ID",
        "APPLE_TEAM_ID",
        "CSC_LINK",
        "CSC_KEY_PASSWORD"
      ],
      "dependsOn": [ "^compile" ],
      "outputs": [ "dist/**", ".next/**" ]
    },
    "lint": { },
    "generate": {
      "dependsOn": [ "^generate" ],
      "cache": false
    },
    "dev": {
      "dependsOn": [ "generate" ],
      "interactive": true,
      "cache": false
    },
    "prisma:studio": {
      "env": [ "DATABASE_URL" ]
    },
    "migrate": {
      "env": [ "DATABASE_URL" ],
      "interactive": true,
      "cache": false
    },
    "trigger-deploy": {
      "cache": false
    },
    "trigger-dev": {
      "interactive": true,
      "cache": false
    }
  }
}
