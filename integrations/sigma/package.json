{
  "name": "@sigma/sigma",
  "version": "0.1.0",
  "description": "sigma extension for Sigma",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm run build:agent && npm run copy:spec",
    "build:agent": "ncc build agent/index.ts -o dist/agent",
    "dev:agent": "ncc build agent/index.ts -o dist/agent --watch",
    "lint": "eslint --ext js,ts,tsx backend/ frontend/ --fix",
    "prettier": "prettier --config .prettierrc --write .",
    "copy:spec": "cp spec.json dist/"
  },
  "peerDependencies": {
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^5.0.7",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.8",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.28.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^4.7.2",
    "tsup": "^8.0.1",
    "ncc": "0.3.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@tegonhq/agent-sdk": "0.1.14",
    "@tegonhq/sigma-sdk": "0.1.13",
    "axios": "^1.7.9",
    "openai": "^4.0.0"
  }
}